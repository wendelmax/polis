extends: default

rules:
  # Line length
  line-length:
    max: 120
    level: warning

  # Indentation
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false

  # Comments
  comments:
    min-spaces-from-content: 1

  # Document start
  document-start:
    present: false

  # Empty lines
  empty-lines:
    max: 2
    max-start: 0
    max-end: 1

  # Truthy
  truthy:
    allowed-values: ['true', 'false', 'on', 'off', 'yes', 'no']

  # Key ordering
  key-ordering:
    check-keys: false

  # Quoted strings
  quoted-strings:
    quote-type: single
    check-keys: false

  # Brackets
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # Braces
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # Commas
  commas:
    max-spaces-before: 0
    min-spaces-after: 1

  # Colons
  colons:
    max-spaces-before: 0
    min-spaces-after: 1

  # Hyphens
  hyphens:
    max-spaces-after: 1

  # Comments indentation
  comments-indentation: disable

  # Empty values
  empty-values:
    forbid-in-block-mappings: true
    forbid-in-flow-mappings: true

  # Key duplicates
  key-duplicates: enable

  # Octal values
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

  # Trailing spaces
  trailing-spaces: enable

  # Truthy
  truthy:
    allowed-values: ['true', 'false', 'on', 'off', 'yes', 'no']

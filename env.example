# Polis Container Runtime - Environment Variables
# Copy this file to .env and configure your values

# Docker Hub Authentication
# Get your token from: https://hub.docker.com/settings/security
DOCKER_HUB_TOKEN=

# Admin User Configuration
# Default admin password (change in production)
ADMIN_PASSWORD=admin123

# Test Configuration
# Password used in benchmarks and tests
TEST_PASSWORD=password123

# Registry Configuration
# Additional registries to search
POLIS_REGISTRIES=docker.io,quay.io,gcr.io

# Security Configuration
# JWT secret for authentication
JWT_SECRET=your-secret-key-here

# Storage Configuration
# Root directory for Polis data
POLIS_DATA_ROOT=/var/lib/polis

# Logging Configuration
# Log level: trace, debug, info, warn, error
POLIS_LOG_LEVEL=info

# Network Configuration
# Default bridge network
POLIS_DEFAULT_BRIDGE=polis0

# Performance Configuration
# Memory limit for containers (e.g., 512m, 1g)
POLIS_MEMORY_LIMIT=

# CPU limit for containers (e.g., 1.0, 2.0)
POLIS_CPU_LIMIT=
